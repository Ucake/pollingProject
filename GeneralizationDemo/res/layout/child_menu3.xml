<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/child_layout3"  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"  
    android:background="#FFFFFF"  
    android:gravity="bottom"  
    android:orientation="vertical" >  
  
    <RelativeLayout  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" >  
  
        <Button  
            android:id="@+id/more1"  
            android:layout_width="wrap_content"  
            android:layout_height="45dp"  
            android:background="@drawable/actionsheet_top_selector"  
            android:paddingLeft="10dp"  
            android:paddingRight="10dp"  
            android:text="位置设置"  
            android:textColor="#000000"  
            android:textSize="16sp" />  
  
        <View  
            android:layout_width="wrap_content"  
            android:layout_height="1px"  
            android:layout_alignLeft="@id/more1"  
            android:layout_alignRight="@id/more1"  
            android:layout_below="@id/more1"  
            android:background="#E4E4E4" />  
    </RelativeLayout>  
  
    <RelativeLayout  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" >  
  
        <Button  
            android:id="@+id/more2"  
            android:layout_width="wrap_content"  
            android:layout_height="45dp"  
            android:background="@drawable/actionsheet_top_selector"  
            android:paddingLeft="10dp"  
            android:paddingRight="10dp"  
            android:text="网络设置"  
            android:textColor="#000000"  
            android:textSize="16sp" />  
  
        <View  
            android:layout_width="wrap_content"  
            android:layout_height="1px"  
            android:layout_alignLeft="@id/more2"  
            android:layout_alignRight="@id/more2"  
            android:layout_below="@id/more2"  
            android:background="#E4E4E4" />  
    </RelativeLayout>  
  
    <RelativeLayout  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" >  
  
        <Button  
            android:id="@+id/more3"  
            android:layout_width="wrap_content"  
            android:layout_height="45dp"  
            android:background="@drawable/actionsheet_top_selector"  
            android:paddingLeft="10dp"  
            android:paddingRight="10dp"  
            android:text="系统设置"  
            android:textColor="#000000"  
            android:textSize="16sp" />  
  
        <View  
            android:layout_width="wrap_content"  
            android:layout_height="1px"  
            android:layout_alignLeft="@id/more3"  
            android:layout_alignRight="@id/more3"  
            android:layout_below="@id/more3"  
            android:background="#E4E4E4" />  
    </RelativeLayout>  
  
</LinearLayout>  